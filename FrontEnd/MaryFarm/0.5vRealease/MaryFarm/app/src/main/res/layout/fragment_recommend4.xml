<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/recommendContainer4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AlgorithmPage.RecommendFragment3">


    <TextView
        android:id="@+id/recommendTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="5개의 항목으로 \n작물을 추천 받아 보세요!"
        android:textSize="40dp"
        android:fontFamily="@font/baemin_jua"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="120dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어느 정도의 크기를 원하시나요?"
            android:fontFamily="@font/baemin_jua"
            android:textSize="25dp"
            android:gravity="center"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/section_1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/plants_size_small"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="소형"
                    android:textSize="30dp"
                    android:fontFamily="@font/baemin_jua"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/section_2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/plants_size_normal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="중형"
                    android:textSize="30dp"
                    android:fontFamily="@font/baemin_jua"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/section_3"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/plants_size_large"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="대형"
                    android:textSize="30dp"
                    android:fontFamily="@font/baemin_jua"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/section_4"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/plants_size_normal"
                    android:visibility="invisible"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="물이 뭐죠?"
                    android:textSize="30dp"
                    android:fontFamily="@font/baemin_jua"
                    android:gravity="center"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>