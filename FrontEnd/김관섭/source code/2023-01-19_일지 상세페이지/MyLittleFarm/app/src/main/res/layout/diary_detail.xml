<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="7.5dp"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kimcalm4713" />
    </LinearLayout>

    <ImageView
        android:id="@+id/diaryDetailImages"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/sample3"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/emptyHeartIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/empty_heart_icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/fullHeartIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/full_heart_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/comment_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/likeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 3"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:id="@+id/diaryAllContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diaryContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/diary_content" />

        <TextView
            android:id="@+id/view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:visibility="visible"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</LinearLayout>