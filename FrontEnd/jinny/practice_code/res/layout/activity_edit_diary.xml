<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDiaryActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/diary_photo_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            android:src="@drawable/flowerpot"
            tools:layout_editor_absoluteY="105dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true" >
            <Button
                android:id="@+id/photo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카메라"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="644dp"
                android:layout_margin="1dp"/>
            <Button
                android:id="@+id/gallery_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="갤러리"
                tools:layout_editor_absoluteX="219dp"
                tools:layout_editor_absoluteY="644dp"
                android:layout_margin="1dp"/>
        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_text_box"
        android:layout_width="305dp"
        android:layout_height="172dp"
        android:text="게시글 원래 내용이 들어와야 한답니다  #해시태그는 어떻게 따로 표시해야 할까요?"
        android:inputType="none"
        android:maxLength="500"
        android:ems="10"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="442dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정 완료"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="644dp"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="644dp"
            android:layout_margin="1dp"/>
    </LinearLayout>



</LinearLayout>